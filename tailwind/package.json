{
  "name": "django-auth-style",
  "private": true,
  "license": "Apache-2.0",
  "devDependencies": {
    "@parcel/transformer-sass": "2.7.0",
    "@tailwindcss/forms": "^0.5.3",
    "daisyui": "^2.31.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.7.0",
    "postcss": "^8.4.16",
    "remixicon": "^2.5.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.13.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "tailwindcss": "^3.1.8"
  },
  "scripts": {
    "lint": "stylelint **/*.scss",
    "watch": "parcel watch --no-cache",
    "build:clean": "rimraf ../auth_style/static/auth_style/dist",
    "build:compile": "parcel build --no-cache",
    "build": "npm-run-all build:clean build:compile"
  },
  "targets": {
    "styles": {
      "source": [
        "./src/styles.scss",
        "./src/icons.css"
      ],
      "distDir": "../auth_style/static/auth_style/dist"
    }
  },
  "browserslist": "> 0.5%",
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "max-nesting-depth": null,
      "selector-no-qualifying-type": null,
      "scss/at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "apply",
            "layer",
            "responsive",
            "screen",
            "tailwind",
            "variants"
          ]
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {}
    }
  }
}
