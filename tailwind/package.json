{
  "name": "girder-style",
  "private": true,
  "license": "Apache-2.0",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.2.1",
    "@tailwindcss/forms": "^0.4.0",
    "autoprefixer": "^10.4.2",
    "daisyui": "^1.25.4",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.2.1",
    "postcss": "^8.4.6",
    "remixicon": "^2.5.0",
    "rimraf": "^3.0.2",
    "sass": "^1.49.7",
    "stylelint": "^14.3.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "tailwindcss": "^3.0.18"
  },
  "scripts": {
    "lint": "stylelint **/*.scss",
    "watch": "parcel watch --no-cache",
    "build:clean": "rimraf ../girder_style/static/girder_style/dist",
    "build:compile": "parcel build --no-cache",
    "build": "npm-run-all build:clean build:compile"
  },
  "targets": {
    "styles": {
      "source": [
        "./src/styles.scss",
        "./src/icons.css"
      ],
      "distDir": "../girder_style/static/girder_style/dist"
    }
  },
  "browserslist": "> 0.5%",
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "max-nesting-depth": null,
      "selector-no-qualifying-type": null,
      "scss/at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "apply",
            "layer",
            "responsive",
            "screen",
            "tailwind",
            "variants"
          ]
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "cssnano": {
    "preset": [
      "default",
      {
        "discardComments": {
          "removeAll": true
        }
      }
    ]
  }
}
