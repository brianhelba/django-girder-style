{
  "name": "django-auth-style",
  "private": true,
  "license": "Apache-2.0",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "daisyui": "^2.41.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.8.0",
    "postcss": "^8.4.19",
    "postcss-nested": "^6.0.0",
    "remixicon": "^2.5.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.15.0",
    "stylelint-config-standard": "^29.0.0",
    "tailwindcss": "^3.2.4"
  },
  "scripts": {
    "lint": "stylelint src/*",
    "watch": "parcel watch --no-cache",
    "build:clean": "rimraf ../auth_style/static/auth_style/dist",
    "build:compile": "parcel build --no-cache",
    "build": "npm-run-all build:clean build:compile"
  },
  "targets": {
    "styles": {
      "source": [
        "./src/styles.pcss",
        "./src/icons.css"
      ],
      "distDir": "../auth_style/static/auth_style/dist"
    }
  },
  "browserslist": "> 0.5%",
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "apply",
            "tailwind"
          ]
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "postcss-nested": {},
      "tailwindcss": {}
    }
  }
}
